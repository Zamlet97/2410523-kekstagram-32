root: true

parserOptions:
  ecmaVersion: 2022
  sourceType: "module"

env:
  es2022: true
  browser: true

globals:
  noUiSlider: readonly
  Pristine: readonly

extends:
  "htmlacademy/vanilla"

plugins:
  - import

rules:
  sort-imports:
    - error
    - ignoreCase: true
      ignoreDeclarationSort: true

  import/order:
    - error
    - groups:
        - index
        - sibling
        - parent
        - internal
        - external
        - builtin
        - object
        - type
